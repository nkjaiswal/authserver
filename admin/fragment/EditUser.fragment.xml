<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="Update User">
		<f:SimpleForm id="SimpleFormChange3541" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
			labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
			columnsL="1" columnsM="1" singleContainerFullSize="false">
			<f:content>
				<Label text="User ID"/>
				<Input value="{userid}" id="updateUserId" editable="false"/>
				<Label text="Name"/>
				<Input value="{userName}" id="updateUserName"></Input>
				<Label text="Email"/>
				<Input value="{emailid}" id="updateEmailId"/>
				<Label text="Phone"/>
				<Input value="{phone}" id="updatePhone"/>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="Save" press="onPressUpdateUser"></Button>
			<Button text="Cancel" press="onPressCancel"></Button>
		</buttons>
	</Dialog>
	
</core:FragmentDefinition>